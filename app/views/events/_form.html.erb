
<%= form_for @event do |f| %>

  <%= render "errors", object: @event %>

  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
    <br />
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br />
    <%= f.label :location %>
    <%= f.text_field :location %>
    <br />
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br />
    <%= f.label :starts_at %>
    <%= f.date_select :starts_at %>
    <br />
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br />
    Current Image: 
    <%= image_for(@event) %>
    <br />
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
    <br />
    <%= f.submit %>
    <%= link_to "Cancel", events_path %>
  </fieldset>


<% end %>
